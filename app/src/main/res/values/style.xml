<?xml version="1.0" encoding="utf-8"?>

<resources>

    <style name="settings_buttons">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:clickable">true</item>
        <item name="android:background">@drawable/ripple_effect</item>
    </style>

    <style name="settings_main">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_margin">5dp</item>
        <item name="android:padding">5dp</item>
        <item name="android:background">@drawable/main_ripple_effect</item>
    </style>

    <style name="settings_main2">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_margin">5dp</item>
        <item name="android:padding">5dp</item>
        <item name="android:background">@drawable/main_ripple_effect2</item>
    </style>

    <style name="settings_buttons_in_fragments">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:clickable">true</item>
        <item name="android:background">@drawable/ripple_effect_buttons</item>
    </style>

    <style name="settings_buttons_not_active">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:clickable">true</item>
        <item name="android:background">@drawable/img_btn_not_active</item>
    </style>

    <style name="settings_img_btn_not_active">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:clickable">true</item>
        <item name="android:background">@drawable/for_img_btn</item>
    </style>

</resources>